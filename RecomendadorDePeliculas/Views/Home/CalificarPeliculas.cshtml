@model IEnumerable<RecomendadorDePeliculas.Entidades.Models.Pelicula>

<div class="container mt-4">
    
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var pelicula in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="row g-0">
                            <div class="col-md-4">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@pelicula.Title </h5>
                                    <p class="card-text"><strong>Géneros:</strong> @pelicula.Genres</p>
                                    <p class="card-text"><strong>ID Interno:</strong> @pelicula.Id</p>
                                    <p class="card-text"><strong>TMDB ID:</strong> @pelicula.TmdbId</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
</div>
